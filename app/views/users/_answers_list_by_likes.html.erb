<table>
  <tbody>
      <% @user.answers.order(likes_number: :desc, created_at: :asc).each do |answer| %>
      	<tr>
      	<td><div class="btn-gray"><%= answer.likes.count %></div></td>
        <td><%= link_to truncate(answer.content), question_path(answer.question) %></td>
      </tr>
      <%end%>
  </tbody>
</table>
