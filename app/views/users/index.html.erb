<h1> Ranking </h1>

<table class="table" width="400">
	<thead>
	 <tr>
      <th colspan="1">Points</th>
      <th>User</th>
    </tr>
  	</thead>
  	<tbody>
  		<% @users.each do |user| %>
  		<tr>
  		<td>
			<%= user.points %>
		</td>
		<td>
			<%= link_to user.username, user_path(user) %>
		</td>
		</tr>
		<% end %>
	</tbody>
</table>