<div class="row">
  <div class="col-md-8 center-block">
    <table class="table table-hover card">
      <thead>
        <tr>
          <th>User</th>
          <th>Points</th>
          <th>Badges</th>
          <th>Questions</th>
          <th>Answers</th>
        </tr>
      </thead>
      <tbody>
        <% @users.order(points: :desc).each do |user| %>
          <tr>
            <td><%= link_to user.username, user_path(user) %></td>
            <td><%= user.points %></td>
            <td><%= user.badges.count %></td>
            <td><%= user.questions.count %></td>
            <td><%= user.answers.count %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>