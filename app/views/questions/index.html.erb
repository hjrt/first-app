<p id="notice"><%= notice %></p>
<h1>Questions</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Answers</th>
      <th>Title</th>
      <th>Content</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @questions.each do |question| %>
      <tr>
        <td><%= question.answers.count %></td>
        <td><%=link_to question.title, question %></td>
        <td><%= truncate(question.content, length: 20) %></td>
        <!-- <td><%= link_to 'Show', question %></td> -->
        <% if current_user == question.user %>
            <% unless question.accepted %>
                <td><%= link_to 'Edit', edit_question_path(question) %>
                <%= link_to 'Destroy', question, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <% else %>
              <td><%= link_to 'Destroy', question, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <% end %>
        <% else %>
          <td></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

