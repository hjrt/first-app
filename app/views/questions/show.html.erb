<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @question.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @question.content %>
</p>
<%= link_to 'Edit', edit_question_path(@question) %> |
<%= link_to 'Back', questions_path %>

<% if !@question.accepted %>
  <%= render 'answers/form', answer: @answer %>
<% end %>

<h1>Answers</h1>

<table class="table">
  <thead>
    <tr>
      <th>Content</th>
      <th>Autor</th>
      <th>voting</th>
      <th>accepting</th>
    </tr>
  </thead>

  <tbody>
    <% @question.answers.each do |answer| %>
      <tr>
        <td><%= answer.content %></td>
        <td>
          Submitted <%= time_ago_in_words(answer.created_at) %>
          by <%= answer.user.username %><br />
        </td>
        <td>
          <%= link_to like_answer_path(answer), method: :put do %>
            Upvote <%= answer.get_upvotes.size %>
          <% end %>
          <%= link_to dislike_answer_path(answer), method: :put do %>
            Downvote
            <%= answer.get_downvotes.size %>
          <% end %>
        </td>
        <td>
          <% if @question.accepted %>
            <% if answer.accepted%>
              Ta odp jest zakceptowana
            <% end %>
            <%= link_to accept_answer_path(answer), method: :put do %>
              accept
            <% end %>
          <% end %>
          

        </td>
        </tr>
      <% end %>
  </tbody>
</table>